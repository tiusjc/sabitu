<?php
class Sys_model extends CI_Model {


    function __construct()
    {
        parent::__construct();
        
    }
    
    public function getField($id,$campo){
        $this->db->select("$campo");
        $this->db->where('id',$id);
        $busca = $this->db->get('sys');
        if ($busca ->num_rows > 0){
            $row = $busca->row_array();
            return $row[$campo];
        }else{
            return "";
        }
    }
}